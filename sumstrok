#include "pch.h"
#include <iostream>
using namespace std;

int main() 
{
	setlocale(LC_ALL, "RUS");
	int arr[3][3] = { {1,2,3},{1,2,3},{1,2,3} };
	int n = 3, m = 3;
	cout << "Введите номер строки, сумму элементов которой необходимо вычислить: " << endl;
	int num;
	cin >> num;
	int sum = 0;
	for (int i = 0; i < m; i++) {
		sum += arr[num][i];
	}
	cout << "Сумма равна: " << sum << endl;
}
